{
  "name": "sg-modal-lib",
  "version": "1.1.1",
  "description": "Library to simplify modal creation and management.",
  "type": "module",
  "main": "./dist/sg-modal-lib.cjs.js",
  "module": "./dist/sg-modal-lib.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/sg-modal-lib.es.js",
      "require": "./dist/sg-modal-lib.cjs.js"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && copyfiles ./index.d.ts dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "prop-types": "^15.8.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.11",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.11.0",
    "jsdom": "^25.0.1",
    "sass": "^1.79.4",
    "vite": "^5.4.8",
    "vitest": "^2.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/segoleneganzin/sg-modal-lib.git"
  },
  "keywords": [
    "modal"
  ],
  "author": "Ségolène Ganzin",
  "license": "ISC",
  "homepage": "https://github.com/segoleneganzin/sg-modal-lib#readme"
}
